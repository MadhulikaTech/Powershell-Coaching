# Define the output file name
$outputFileName = "index.html"

# Get the current directory
$currentDirectory = Get-Location

# Combine the current directory with the output file name to get the full path
$outputFilePath = Join-Path -Path $currentDirectory -ChildPath $outputFileName

# Write the HTML content to the file
Set-Content -Path $outputFilePath -Value $htmlContent

Write-Host "Website created successfully at $outputFilePath"
